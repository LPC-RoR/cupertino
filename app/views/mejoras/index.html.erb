<p id="notice"><%= notice %></p>

<h1>Mejoras</h1>

<table>
  <thead>
    <tr>
      <th>Mejora</th>
      <th>Detalle</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mejoras.each do |mejora| %>
      <tr>
        <td><%= mejora.mejora %></td>
        <td><%= mejora.detalle %></td>
        <td><%= mejora.owner_id %></td>
        <td><%= link_to 'Show', mejora %></td>
        <td><%= link_to 'Edit', edit_mejora_path(mejora) %></td>
        <td><%= link_to 'Destroy', mejora, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

